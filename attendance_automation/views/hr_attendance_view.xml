<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_attendance_tree_inherit" model="ir.ui.view">
            <field name="name">hr.attendance.tree.inherited</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='check_out']" position="after">
                    <field name="zone_id"/>
                </xpath>
            </field>
        </record>

        <record id="show_late_employees_action" model="ir.actions.server">
            <field name="name">Late Employees</field>
            <field name="model_id" ref="attendance_automation.model_hr_employee"/>
            <field name="state">code</field>
            <field name="code">action = model.sort_employee_by()</field>
        </record>

        <menuitem name="Late Employees" id="late_employees_action"
                  parent="hr_attendance.menu_hr_attendance_manage_attendances"
                  action="show_late_employees_action"/>
    </data>
</odoo>